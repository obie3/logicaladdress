{
  "expo": {
    "name": "LogicalAddress",
    "slug": "LogicalAddress",
    "privacy": "unlisted",
    "sdkVersion": "36.0.0",
    "description": "Digital identity management software, that keeps you connected to your community",
    "primaryColor" :  "#0177c1",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./src/assets/images/androidIcon.png",
    "splash": {
      "image": "./src/assets/images/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 300000
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "package": "com.logicaladdress.mobile",
      "versionCode": 2,
      "playStoreUrl": "https://play.google.com/store/apps/details?id=",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "com.android.launcher.permission.INSTALL_SHORTCUT",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"

      ],
      "splash": {
        "resizeMode": "cover",
        "mdpi": "./src/assets/images/splash.png",
        "hdpi": "./src/assets/images/splash.png",
        "xhdpi": "./src/assets/images/splash.png",
        "backgroundColor": "#ffffff"
      }
    },
    
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.logicaladdress.mobile",
      "buildNumber": "1.0.0",
      "icon": "./src/assets/images/iosIcon.png",
      "splash": {
        "backgroundColor": "#ffffff",
        "resizeMode": "contain",
        "image": "./src/assets/images/splash.png"
      },

      "infoPlist": {
        "NSLocationWhenInUseUsageDescription":
        "LogicalAddress needs access to your location to let you set your home address",
        "UIBackgroundModes": [
          "location",
          "fetch"
        ],
        "NSPhotoLibraryUsageDescription":
          "LogicalAddress needs access to your photo library to let you upload images and set profile Image.",
        "NSCameraUsageDescription" : 
        "LogicalAddress requires to access your camera to let you snap and upload documents"
      }
    },
    "packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": [
        "js",
        "jsx",
        "svg",
        "ts",
        "tsx"
      ]
    },

    "notification": {
      "icon":"./src/assets/images/iosIcon.png",
      "androidMode": "collapse",
      "androidCollapsedTitle":"New Messages",
      "iosDisplayInForeground": true,
      "color" : "#0177c1"
    }
  }
}
