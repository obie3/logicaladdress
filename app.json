{
  "expo": {
    "name": "LogicalAddress",
    "slug": "LogicalAddress",
    "privacy": "public",
    "sdkVersion": "36.0.0",
    "description": "Logical Address Mobile",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/androidIcon.png",
    "splash": {
      "image": "./src/assets/images/logicallogo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ecf0f1"
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 300000
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "package": "com.logicaladdress.mobile",
      "versionCode": 1,
      "playStoreUrl": "https://play.google.com/store/apps/details?id=",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.logicaladdress.mobile",
      "buildNumber": "1.0.0",
      "icon": "./src/assets/images/iosIcon.png",
      "splash": {
        "backgroundColor": "#ecf0f1",
        "resizeMode": "contain",
        "image": "./src/assets/images/logicallogo.png"
      },

      "infoPlist": {
        "NSLocationWhenInUseUsageDescription":
        "LogicalAddress needs access to your location to let you set your home address",
        "UIBackgroundModes": [
          "location",
          "fetch"
        ]
      }
    },
    "packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": [
        "js",
        "jsx",
        "svg",
        "ts",
        "tsx"
      ]
    }
    
  }
}
